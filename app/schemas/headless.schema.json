{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/nerevu/HTTPSanction/features/app/schemas/headless.schema.json",
  "title": "Headless Element",
  "description": "An element on a provider's application login page",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "description": {
      "description": "User friendly identification of the element",
      "type": "string",
      "default": "",
      "examples": [
        "password"
      ]
    },
    "selector": {
      "description": "CSS selector of the element",
      "type": "string",
      "default": "",
      "examples": [
        "#xl-form-password"
      ]
    },
    "findText": {
      "description": "Text contained in the element",
      "type": "string",
      "default": "",
      "examples": [
        "#xl-form-password"
      ]
    },
    "action": {
      "description": "Action to perform on the element",
      "type": "string",
      "default": "",
      "pattern": "submit|click|clear"
    },
    "content": {
      "description": "Text to send to the element (can't be mixed with `prompt`)",
      "type": "string",
      "default": "",
      "examples": [
        "$PASSWORD"
      ]
    },
    "prompt": {
      "description": "Text to display when requesting user input (can't be mixed with `content`).",
      "type": "string",
      "default": "",
      "examples": [
        "Enter 2fa code"
      ]
    }
  },
  "definitions": {
    "selector": {
      "required": [
        "selector",
        "description"
      ]
    },
    "findText": {
      "required": [
        "findText",
        "description"
      ]
    },
    "prompt": {
      "required": [
        "prompt"
      ]
    },
    "content": {
      "required": [
        "content"
      ]
    },
    "action": {
      "required": [
        "action"
      ]
    }
  },
  "allOf": [
    {
      "oneOf": [
        {
          "$ref": "#/definitions/selector"
        },
        {
          "$ref": "#/definitions/findText"
        }
      ]
    },
    {
      "oneOf": [
        {
          "$ref": "#/definitions/prompt"
        },
        {
          "$ref": "#/definitions/content"
        },
        {
          "$ref": "#/definitions/action"
        }
      ]
    }
  ]
}
