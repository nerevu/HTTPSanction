{
  "prefix": "airtable",
  "auths": [
    {
      "authId": "base",
      "authType": "bearer",
      "documentationURL": "https://airtable.com/developers/web/api/oauth-reference",
      "personalAccessToken": "$AIRTABLE_PAT",
      "attrs": {
        "baseId": "$AIRTABLE_BASE_ID"
      }
    },
    {
      "authId": "public",
      "parent": "base",
      "apiBaseURL": "https://api.airtable.com/v0/{baseId}",
      "params": {
        "maxRecords": 2048,
        "pageSize": 100,
        "offset": null,
        "view": null
      }
    },
    {
      "authId": "meta",
      "parent": "base",
      "apiBaseURL": "https://api.airtable.com/v0/meta",
      "isDefault": true
    }
  ],
  "statusResourceId": "bases",
  "resources": [
    {
      "resourceId": "records",
      "authId": "public",
      "resourcePath": "$AIRTABLE_TABLE_ID",
      "subkey": "records"
    },
    {
      "resourceId": "bases",
      "authId": "meta",
      "subkey": "bases"
    }
  ]
}
