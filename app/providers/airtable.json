{
  "$schema": "../schemas/provider.schema.json",
  "prefix": "airtable",
  "auths": [
    {
      "authId": "base",
      "authType": "bearer",
      "documentationURL": "https://airtable.com/developers/web/api/oauth-reference",
      "personalAccessToken": "$AIRTABLE_PAT",
      "attrs": {}
    },
    {
      "authId": "public",
      "parent": "base",
      "apiBaseURL": "https://api.airtable.com/v0",
      "params": {
        "maxRecords": 2048,
        "pageSize": 100,
        "offset": null,
        "view": null
      }
    },
    {
      "authId": "meta",
      "parent": "base",
      "apiBaseURL": "https://api.airtable.com/v0/meta",
      "isDefault": true
    }
  ],
  "statusResourceId": "bases",
  "resources": [
    {
      "resourceId": "records",
      "resourcePath": "{rid}/records",
      "authId": "public",
      "rid": "$AIRTABLE_BASE_ID",
      "srid": "$AIRTABLE_TABLE_ID",
      "resultKey": "records"
    },
    {
      "resourceId": "bases",
      "authId": "meta",
      "resultKey": "bases"
    },
    {
      "resourceId": "payloads",
      "resourcePath": "bases/{rid}/webhooks/{srid}/payloads",
      "authId": "public",
      "rid": "$AIRTABLE_BASE_ID",
      "resultKey": "payloads"
    }
  ],
  "webhook": {
    "documentationURL": "https://airtable.com/developers/web/guides/webhooks-api",
    "signatureHeader": "X-Airtable-Content-MAC",
    "webhookSecret": "$AIRTABLE_WEBHOOK_SECRET",
    "extractions": {
      "rid": "base.id",
      "srid": "webhook.id"
    }
  }
}
