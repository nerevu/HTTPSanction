{
  "prefix": "xero",
  "resources": [
    {
      "resourceId": "connections",
      "resource": "connections",
      "authId": "simple"
    },
    {
      "resourceId": "projects",
      "resource": "projects",
      "authId": "project",
      "fields": [
        "projectId",
        "name",
        "status"
      ],
      "idField": "projectId",
      "subkey": "items",
      "methods": [
        "GET",
        "POST"
      ]
    },
    {
      "resourceId": "users",
      "resource": "projectsusers",
      "authId": "project",
      "fields": [
        "userId",
        "name"
      ],
      "idField": "userId",
      "subkey": "items"
    },
    {
      "resourceId": "contacts",
      "resource": "Contacts",
      "authId": "api",
      "fields": [
        "ContactID",
        "Name",
        "FirstName",
        "LastName"
      ],
      "idField": "ContactID",
      "subkey": "Contacts"
    },
    {
      "resourceId": "payments",
      "resource": "Payments",
      "authId": "api",
      "idField": "PaymentID",
      "subkey": "Payments"
    },
    {
      "resourceId": "invoices",
      "resource": "Invoices",
      "authId": "api",
      "idField": "InvoiceID",
      "subkey": "Invoices",
      "nameField": "InvoiceNumber",
      "methods": [
        "GET",
        "POST"
      ]
    },
    {
      "resourceId": "online_invoices",
      "resource": "Invoices",
      "subresource": "OnlineInvoice",
      "authId": "api",
      "idField": "OnlineInvoiceUrl",
      "subkey": "OnlineInvoices"
    },
    {
      "resourceId": "inventory",
      "resource": "Items",
      "authId": "api",
      "fields": [
        "ItemID",
        "Name",
        "Code",
        "Description",
        "SalesDetails"
      ],
      "idField": "ItemID",
      "subkey": "Items",
      "nameField": "Name"
    },
    {
      "resourceId": "project_tasks",
      "resource": "projects",
      "subresource": "tasks",
      "authId": "project",
      "fields": [
        "taskId",
        "name",
        "status",
        "rate.value",
        "projectId"
      ],
      "idField": "taskId",
      "subkey": "items",
      "methods": [
        "GET",
        "POST"
      ]
    },
    {
      "resourceId": "project_time",
      "resource": "projects",
      "subresource": "time",
      "authId": "project",
      "attrs": {
        "event_pos": 0,
        "event_id": ""
      },
      "idField": "timeEntryId",
      "subkey": "items",
      "methods": [
        "GET",
        "POST"
      ]
    }
  ],
  "statusResource": "connections",
  "auths": [
    {
      "authId": "base",
      "documentationURL": "https://developer.xero.com/documentation/getting-started-guide",
      "authType": "oauth2",
      "authorizationBaseURL": "https://login.xero.com/identity/connect/authorize",
      "tokenURL": "https://identity.xero.com/connect/token",
      "refreshURL": "https://identity.xero.com/connect/token",
      "redirectURI": "/xero-callback",
      "tenantPath": "result[0].tenantId",
      "headers": {
        "ALL": {
          "Xero-tenant-id": "{tenant_id}"
        }
      },
      "clientId": "$XERO_CLIENT_ID",
      "clientSecret": "$XERO_SECRET",
      "username": "$XERO_USERNAME",
      "password": "$XERO_PASSWORD",
      "paramMap": {
        "start": "dateAfterUtc",
        "end": "dateBeforeUtc"
      },
      "scope": [
        "projects",
        "offline_access",
        "accounting.transactions",
        "accounting.settings",
        "accounting.contacts",
        "accounting.attachments",
        "files",
        "assets"
      ],
      "headlessElements": [
        {
          "selector": "#xl-form-email",
          "description": "xero username",
          "content": "$XERO_USERNAME"
        },
        {
          "selector": "#xl-form-password",
          "description": "xero password",
          "content": "$XERO_PASSWORD"
        },
        {
          "selector": "#xl-form-submit",
          "description": "xero sign in",
          "action": "click"
        },
        {
          "selector": "[placeholder=\"Authentication code\"]",
          "description": "xero 2fa code",
          "prompt": "xero 2fa code"
        },
        {
          "selector": "[type=\"submit\"]",
          "description": "xero confirm",
          "action": "click"
        },
        {
          "selector": "#approveButton",
          "description": "xero connect",
          "action": "click"
        },
        {
          "selector": "#approveButton",
          "description": "xero allow access",
          "action": "click",
          "wait": 5
        },
        {
          "selector": "#approveButton",
          "description": "xero select org",
          "action": "click",
          "wait": 5
        }
      ]
    },
    {
      "authId": "simple",
      "parent": "base",
      "isDefault": true,
      "apiBaseURL": "https://api.xero.com"
    },
    {
      "authId": "api",
      "parent": "base",
      "apiBaseURL": "https://api.xero.com/api.xro/2.0"
    },
    {
      "authId": "project",
      "parent": "base",
      "apiBaseURL": "https://api.xero.com/projects.xro/2.0"
    }
  ],
  "webhook": {
    "documentationURL": "https://developer.xero.com/documentation/guides/webhooks/overview",
    "signatureHeader": "x-xero-signature",
    "webhookSecret": "$XERO_WEBHOOK_SECRET",
    "digest": "sha256",
    "b64Encode": true,
    "payloadKey": "events"
  }
}
