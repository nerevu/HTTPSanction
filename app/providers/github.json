{
  "$schema": "../schemas/provider.schema.json",
  "prefix": "github",
  "auths": [
    {
      "authId": "base",
      "apiBaseURL": "https://api.github.com"
    },
    {
      "authId": "oauth",
      "authType": "oauth2",
      "parent": "base",
      "documentationURL": "https://docs.github.com/en/apps/oauth-apps/building-oauth-apps/authorizing-oauth-apps",
      "authorizationBaseURL": "https://github.com/login/oauth/authorize",
      "tokenURL": "https://github.com/login/oauth/access_token",
      "clientId": "$GITHUB_CLIENT_ID",
      "clientSecret": "$GITHUB_SECRET",
      "scope": [
        "repo",
        "gist",
        "user",
        "project"
      ],
      "params": {
        "scope": "{scope}",
        "client_id": "{client_id}"
      }
    },
    {
      "authId": "bearer",
      "authType": "bearer",
      "parent": "base",
      "isDefault": true,
      "documentationURL": "https://docs.github.com/en/rest/overview/resources-in-the-rest-api?apiVersion=2022-11-28#authentication",
      "personalAccessToken": "$GITHUB_PAT",
      "headers": {
        "all": {
          "Accept": "application/vnd.github+json",
          "X-GitHub-Api-Version": "2022-11-28"
        }
      }
    }
  ],
  "statusResourceId": "organizations",
  "resources": [
    {
      "resourceId": "organizations",
      "authId": "bearer"
    }
  ],
  "webhook": {
    "webhookSecret": "$GITHUB_WEBHOOK_SECRET",
    "digest": "sha1",
    "splitSignature": true
  }
}
