#!/usr/bin/env bash -uo pipefail

echo
echo "Syncing timeâ€¦"
echo "============="

for PROJECT in $(jq -r '.[] | .id' app/data/timely_projects.json); do
  manage sync $@ -P timely -p ${PROJECT}; STATUS=$?

  if [ $STATUS -ne 0 ]; then
    echo "Sync exited with failures"
    exit
  fi
done

for PROJECT in $(jq -r '.[] | .id' app/data/gsheets_projects.json); do
  manage sync $@ -P gsheets -p ${PROJECT}; STATUS=$?

  if [ $STATUS -ne 0 ]; then
    echo "Sync exited with failures"
    exit
  fi
done

bin/sync-data
